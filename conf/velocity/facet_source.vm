    #foreach ($field in $response.response.facet_counts.facet_fields)


        <div id="$field.name" class="result-terms">
            ###<span class="facet-field">$field.name</span>
            <a href="javascript:facetQuery('$field.name', '*')">All</a>
            <ul>
                #set ($fieldType=$field.name.substring($math.sub($field.name.length(),3), $field.name.length()))
                #foreach($facet in $field.values)
                    <li >
                        #if($fieldType && $fieldType == "_id")
                            <a style="color:red" href="javascript:facetQuery('$field.name', '$facet.name')" id="facet$facet.name">$field.name
                        #else

                            <a style="color:red" href="javascript:facetQuery('$field.name', '$facet.name')">$facet.name</a> ($number.format("#*,*",$facet.count))
                        #end
                    </li>
                #end
            </ul>
        </div>
    #end



